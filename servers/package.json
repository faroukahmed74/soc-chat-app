{
  "name": "soc-chat-app-fcm-server",
  "version": "1.0.0",
  "description": "Production FCM Server for SOC Chat App",
  "main": "fcm_server_production.js",
  "scripts": {
    "start": "node fcm_server_production.js",
    "dev": "nodemon fcm_server.js",
    "prod": "NODE_ENV=production node fcm_server_production.js",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "health": "curl http://localhost:3000/health",
    "stats": "curl http://localhost:3000/stats",
    "deploy": "pm2 start fcm_server_production.js --name fcm-server",
    "restart": "pm2 restart fcm-server",
    "stop": "pm2 stop fcm-server",
    "logs": "pm2 logs fcm-server",
    "monitor": "pm2 monit",
    "setup": "npm install && npm run lint:fix",
    "docker:build": "docker build -t soc-chat-fcm-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production soc-chat-fcm-server",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=soc-chat-fcm-server)"
  },
  "keywords": [
    "fcm",
    "firebase",
    "notifications",
    "push-notifications",
    "chat-app",
    "nodejs",
    "express"
  ],
  "author": "SOC Chat App Team",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/soc-chat-app.git",
    "directory": "servers"
  },
  "bugs": {
    "url": "https://github.com/your-username/soc-chat-app/issues"
  },
  "homepage": "https://github.com/your-username/soc-chat-app#readme",
  "config": {
    "port": 3000,
    "environment": "production"
  }
}
