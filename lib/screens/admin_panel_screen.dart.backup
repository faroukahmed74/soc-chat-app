    } catch (e) {
      if (mounted) {
        ScaffoldMessenger.of(context).showSnackBar(
          SnackBar(
            content: Text('Error updating group status: $e'),
            backgroundColor: Colors.red,
          ),
        );
      }
    }
  }

  /// Shows group members dialog
  void _showGroupMembers(Map<String, dynamic> group) {
