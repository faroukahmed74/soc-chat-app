                itemBuilder: (context, index) {
                  final memberId = members[index];
                  final isAdmin = adminIds.contains(memberId);

                  return FutureBuilder<DocumentSnapshot>(
                    future: FirebaseFirestore.instance
                        .collection('users')
                        .doc(memberId)
