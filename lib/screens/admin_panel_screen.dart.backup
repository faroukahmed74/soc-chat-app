  /// Gets color based on system health status
  Color _getHealthColor(String health) {
    switch (health.toLowerCase()) {
      case 'excellent':
        return Colors.green;
      case 'good':
        return Colors.blue;
      case 'fair':
        return Colors.orange;
      case 'needs attention':
      case 'poor':
        return Colors.red;
      default:
        return Colors.grey;
    }
  }
  
